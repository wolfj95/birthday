# Database Configuration for Production
# Copy this file to .env and fill in your actual values

# Database Settings (from cPanel MySQL setup)
DB_HOST=localhost
DB_NAME=youraccount_birthday
DB_USER=youraccount_dbuser
DB_PASS=your_secure_password

# Site Configuration
SITE_NAME=Birthday Website
SITE_EMAIL=your@email.com
SITE_URL=https://yourdomain.com

# Security Settings
REQUIRE_FORUM_APPROVAL=false
FORUM_POSTS_PER_PAGE=10

# File Upload Limits (in bytes)
MAX_UPLOAD_SIZE=5242880

# Error Reporting (set to 0 for production)
PHP_ERROR_REPORTING=0
PHP_DISPLAY_ERRORS=0